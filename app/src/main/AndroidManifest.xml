<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.decoder.musicworld">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".developer"></activity>
        <activity
            android:name=".songs"
            android:label="@string/title_activity_songs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".alan_song" />
        <activity
            android:name=".alan"
            android:label="@string/title_activity_alan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".justin_song" />
        <activity
            android:name=".justin"
            android:label="@string/title_activity_justin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".micheal_song" />
        <activity
            android:name=".micheal_jackson"
            android:label="@string/title_activity_micheal_jackson"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".splashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>