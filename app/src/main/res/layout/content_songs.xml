<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".songs"
    android:background="@drawable/wallpaper"
    tools:showIn="@layout/activity_songs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:text="Songs"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="70dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:onClick="one"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Believer"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/one_play"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/one_pause"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:onClick="two"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Hate Me"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:onClick="three"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/two_pause"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/two_play"
                    android:layout_marginTop="15dp"
                    android:alpha="1"
                    android:layout_marginLeft="260dp"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:onClick="three"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Propaganda"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/three_play"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/three_pause"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:onClick="four"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Senorita"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/four_play"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/four_pause"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="50dp"
                android:onClick="five"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Safari"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/five_play"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/five_pause"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>