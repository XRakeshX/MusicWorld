<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    android:background="@color/black"
    tools:showIn="@layout/activity_scrolling">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <RelativeLayout
                android:alpha="1"
                android:id="@+id/maincontent"
                android:onClick="home"
                android:layout_width="600dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/menu"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:onClick="menu"
                    android:background="@drawable/ic_menu_black_24dp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Music World"
                    android:textColor="@color/white"
                    android:textSize="27sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/main"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/main"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/main" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/micheal_jackson"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/main"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/white"
                    android:onClick="micheal_jackson"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/micheal"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/justin_beiber"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/micheal_jackson"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:onClick="justin_bieber"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/justin"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Alen_walker"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/justin_beiber"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:onClick="alan_walker"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/alan"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        <LinearLayout
            android:id="@+id/mainmenu"
            android:alpha="0"
            android:background="@drawable/drawer_background"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/back"
                android:onClick="home"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="30dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:onClick="home"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_width="120dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/logo_text"
                android:layout_marginLeft="40dp"
                android:text="Music World"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/home"
                android:src="@drawable/ic_home_black_24dp"
                android:onClick="home"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/home_text"
                android:layout_marginLeft="60dp"
                android:text="Home"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="60dp"
                android:layout_height="20dp"/>


            <ImageView
                android:id="@+id/jackson"
                android:src="@drawable/mj_logo"
                android:background="@color/white"
                android:onClick="micheal_jackson"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/jackson_text"
                android:layout_marginLeft="30dp"
                android:text="@string/micheal"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/justin"
                android:src="@drawable/jb_logo"
                android:background="@color/white"
                android:onClick="justin_bieber"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/justin_text"
                android:layout_marginLeft="30dp"
                android:text="@string/justin"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/alan"
                android:src="@drawable/aw_logo"
                android:background="@color/white"
                android:onClick="alan_walker"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/alan_text"
                android:layout_marginLeft="30dp"
                android:text="@string/alan"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/playlist"
                android:src="@drawable/ic_music_note_black_24dp"
                android:onClick="micilaneous"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/playlist_text"
                android:layout_marginLeft="60dp"
                android:text="Playlist"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="60dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/developer"
                android:src="@drawable/ic_person_black_24dp"
                android:onClick="developer"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="90dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/developer_text"
                android:layout_marginLeft="50dp"
                android:text="Developer"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="20dp"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>