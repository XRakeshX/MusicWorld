<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/justin_background"
    tools:context=".justin_song">

    <Button
        android:id="@+id/back"
        android:onClick="back"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <TextView
        android:text="@string/justin"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="100dp"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/bar"
        android:layout_marginTop="200dp"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/song"
            android:text="Yummy"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/elaptime"
            android:layout_below="@id/song"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/remtime"
            android:layout_below="@id/song"
            android:layout_marginLeft="330dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="3:28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_below="@id/elaptime"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/seek_bar"
            android:layout_width="340dp"
            android:layout_height="7dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="75dp"
            android:layout_below="@id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="50dp"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="60dp"
                android:background="@color/white"
                android:onClick="previous"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:src="@drawable/ic_skip_previous_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                app:cardElevation="50dp"
                android:onClick="play"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/pause"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:alpha="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/play"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:alpha="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                app:cardElevation="50dp"
                android:background="@color/white"
                android:onClick="next"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:src="@drawable/ic_skip_next_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/main"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="home"
        android:layout_below="@id/bar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/button"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <ImageView
            android:src="@drawable/ic_home_black_24dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>